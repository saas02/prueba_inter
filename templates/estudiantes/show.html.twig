{% extends 'base.html.twig' %}

{% block title %}Estudiantes{% endblock %}

{% block body %}
    <h1>Estudiantes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ estudiante.id }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ estudiante.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ estudiante.apellidos }}</td>
            </tr>
            <tr>
                <th>Identificacion</th>
                <td>{{ estudiante.identificacion }}</td>
            </tr>
            <tr>
                <th>Contrasena</th>
                <td>{{ estudiante.contrasena }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
